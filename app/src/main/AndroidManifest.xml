<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.newgeneration">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.BibleVerseWebViewActivity"
            android:exported="true"
            android:label="@string/activity_bible_verse"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.newgeneration.activities.ReadingPlansActivity" />
        </activity>
        <activity
            android:name=".activities.ReadingPlansActivity"
            android:label="@string/title_activity_reading_plans"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.newgeneration.activities.MenuListActivity" />
        </activity>
        <activity
            android:name=".activities.DiscoveryProcessActivity"
            android:label="@string/title_activity_discovery_process"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.newgeneration.activities.MenuListActivity" />
        </activity>
        <activity
            android:name=".activities.TrainingAndTipsActivity"
            android:label="@string/title_activity_training_and_tips"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.newgeneration.activities.MenuListActivity" />
        </activity>
        <activity
            android:name=".activities.MenuListActivity"
            android:label="@string/title_activity_menu_list"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.newgeneration.activities.HomeScreenActivity" />
        </activity>
        <activity
            android:name=".activities.HomeScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>